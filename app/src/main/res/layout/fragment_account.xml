<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="421dp"
                android:background="#349CF8"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageviewAvatar"
                    android:layout_width="135dp"
                    android:layout_height="140dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="139dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="138dp"
                    android:padding="5dp"
                    android:src="@drawable/jett"
                    app:shapeAppearanceOverlay="@style/Circular"
                    app:strokeColor="#272729"
                    app:strokeWidth="1dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp">

                <EditText
                    android:id="@+id/edittextEmailAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/custom_email_icon"
                    android:drawablePadding="15dp"
                    android:hint="Email" />

                <EditText
                    android:id="@+id/edittextPasswordAccount"
                    android:layout_width="279dp"
                    android:layout_height="59dp"
                    android:layout_below="@+id/edittextEmailAccount"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/custom_lock_icon"
                    android:drawablePadding="12dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    tools:ignore="UnknownId" />

                <EditText
                    android:id="@+id/edittextNameAccount"
                    android:layout_width="279dp"
                    android:layout_height="59dp"
                    android:layout_below="@+id/edittextPasswordAccount"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="17dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="12dp"
                    android:hint="Full Name" />

                <EditText
                    android:id="@+id/edittextPhoneAccount"
                    android:layout_width="279dp"
                    android:layout_height="59dp"
                    android:layout_below="@+id/edittextNameAccount"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="12dp"
                    android:hint="Phone Number" />

                <EditText
                    android:id="@+id/edittextAddressAccount"
                    android:layout_width="279dp"
                    android:layout_height="59dp"
                    android:layout_below="@+id/edittextPhoneAccount"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="12dp"
                    android:hint="Address" />

                <Button
                    android:id="@+id/buttonUpdate"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="248dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/custom_button"
                    android:text="Update"
                    tools:ignore="InvalidId" />

                <Button
                    android:id="@+id/buttonLogOut"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="51dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/custom_button"
                    android:text="Log Out"
                    tools:ignore="InvalidId" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>