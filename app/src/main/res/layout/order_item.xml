<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageMonAnOrder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textviewTenMonAnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageMonAnOrder"
            android:text="Tên món ăn"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="UnknownId"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/texviewGiaMonAnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewTenMonAnOrder"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageMonAnOrder"
            android:text="Giá"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textviewTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageMonAnOrder"
            android:layout_marginTop="10dp"
            android:text="Đang giao hàng"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:ignore="InvalidId" />
        <Button
            android:layout_below="@id/imageMonAnOrder"
            android:text="Đã nhận được hàng"
            android:layout_marginLeft="230dp"
            android:id="@+id/buttonXacNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>